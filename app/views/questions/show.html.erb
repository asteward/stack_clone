<h2><%= @question.text %></h2>
<hr>
<div id="sorted-answers">
  <ul id="all_answers">
    <% @answers.each do |answer| %>
      <%= render 'answers/answer_list_item', answer: answer %>
    <% end %>
  <ul>
</div>
<% if @user %>
  <div id="new_answer">
  <%= link_to "Answer", new_question_answer_path(@question), class: "btn btn-success", id: "Answer", remote: true %>
  </div>
<% end %>
