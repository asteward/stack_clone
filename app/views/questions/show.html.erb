<h2><%= @question.text %></h2>
<hr>
<div>
  <ul id="all_answers">
    <% @question.answers.each do |answer| %>
      <li><%= User.find(answer.user_id).name %>: <%= answer.text %></li>
    <% end %>
  <ul>
</div>
<% if @user %>
  <div id="new_answer">
  <%= link_to "Answer", new_question_answer_path(@question), class: "btn btn-success", id: "Answer", remote: true %>
  </div>
<% end %>
